<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href=	"/images/logoUno-TechStyle.png"
	/>

	<title> Tech Style </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
<% if (user) { %>
  <%- include('partials/headerLogueado') %>
<% } else { %>
  <%- include('partials/headerNoLogueado') %>
<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/users/register" method="POST" class="form-register">
					<label for="email">Email:</label>
					<input type="email" id="email" name="email">

					<label for="usuario">Usuario:</label>
					<input type="text" id="usuario" name="usuario">

					<label for="password">Contrase√±a:</label>
					<input type="password" id="password" name="contrasenia">

					<label for="date">Fecha de Nacimiento</label>
					<input type="date" id="fecha_nacimiento" name="fecha_nacimiento">

					<label for="dni">DNI:</label>
					<input type="number" id="dni" name="dni">

					<label src="/images/users/default-image.png" for="fotoP">Foto de Perfil:</label>
					<input type="text" id="fotoP" name="foto_perfil">

					<button type="submit">Registrarse</button>
			</form>

		</div>
	</div>
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>